@model ASDAssignmentUTS.Models.User

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminSong/_Layout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>

<div class="container">

    <h1>Update User</h1>
    <hr />
    <div class="row form-center">
        <div class="admin-form">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="form-error"></div>
                <div hidden class="form-group">
                    <label asp-for="id" class="control-label"></label>
                    <input asp-for="id" class="form-control" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="username" class="control-label">Username: </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="username" class="form-control" />
                        <span asp-validation-for="username" class="form-error"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col-4">
                        <label asp-for="email" class="control-label">Email Address: </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="form-error"></span>
                    </div>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group form-buttons">
                    <a class="btn btn-secondary m-2" asp-action="UserManagement">Cancel</a>
                    <input type="button" value="Reset Password" class="btn btn-danger" onclick="goToResetPasswordInPopUpWindow()"/>
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    function goToResetPasswordInPopUpWindow() {
        //this will check if the popup window is blocked and display an alert.
        //if (window.open('', 'testpopup', 'width=1,height=1').focus()) {
          //  alert('Please allow popups for this website');)
        //} else {
            var url = "/AdminUser/ResetPassword?id=" + document.getElementById("id").value;
            window.open(url, "Reset Password", "width=500,height=500");
        //}
    }
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

     

