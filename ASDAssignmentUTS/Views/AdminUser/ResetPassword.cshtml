
@{
    ViewData["Title"] = "ResetPassword";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>

<div class="center text-center">
    <h1>Here is your new generated password.</h1>
    <p>Please show this to the allocated user as it is a tempory password.</p>
    <p>The new password is: @ViewBag.password</p>

    <civ class="form-center">
        <button class="btn btn-primary" onclick="window.close();">Close</button>
    </civ>
</div>


