@model ASDAssignmentUTS.Models.Song
@{
    ViewData["Title"] = "Song Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/alexStyles.css" />
</head>
<body>
    <h1>Song Details</h1>

    <div>
        <p><strong>Song ID:</strong> @Model.id</p>
        <p><strong>Name:</strong> @Model.name</p>
        <p><strong>Artist ID:</strong> @Model.artistId</p>
        <p><strong>Genre:</strong> @Model.genre</p>
        <p><strong>Description:</strong> @Model.description</p>
    </div>

    <div>
        <form action="/Review/DisplayReviews" method="get">
            <input type="hidden" name="songId" value="@Model.id" />
            <button type="submit">Review</button>
        </form>
    </div>

    <div>
        <!-- Update this button to add the song to the playlist -->
        <form action="/Review/DisplayReviews" method="get">
            <input type="hidden" name="songId" value="@Model.id" />
            <button type="submit">Add to Playlist</button>
        </form>
    </div>
</body>
</html>

