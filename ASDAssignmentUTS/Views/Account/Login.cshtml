@{
    Layout = null;
}
@model ASDAssignmentUTS.Models.LoginModel
<link rel="stylesheet" href="~/css/authentication.css">

<div class="auth-container">

    @if (!string.IsNullOrEmpty(TempData["StatusMessage"] as string))
    {
        <div class="notification">
            <div class="error-box">
                @TempData["StatusMessage"]
            </div>
        </div>
    }

    <h2 class="auth-header">Login</h2>

    <h3 class="auth-header">@ViewBag.Title</h3>

    <form asp-action="Login" asp-controller="Account" method="post" class="auth-form">
        <div class="form-group">
            <label asp-for="Username">Username:</label>
            <input asp-for="Username" required class="form-input" />
            @if (!string.IsNullOrEmpty(ViewData.ModelState["Username"]?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <div class="error-box">
                    <span asp-validation-for="Username"></span>
                </div>
            }
        </div>
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <input type="password" asp-for="Password" required class="form-input" />
            @if (!string.IsNullOrEmpty(ViewData.ModelState["Password"]?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <div class="error-box">
                    <span asp-validation-for="Password"></span>
                </div>
            }
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>

    <div class="auth-footer">
        <button onclick="window.location.href='@Url.Action("UserRegistration", "Account")';" class="navigate-register">Register</button>
    </div>
</div>
